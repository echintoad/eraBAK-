		ELSEIF GROUPMATCH(eMotion_Text, "암울", "슬픔", "우울")
			sTemp:1 = 슬픔
		ELSEIF GROUPMATCH(eMotion_Text, "공포", "겁냄")
			sTemp:1 = 공포
		ELSEIF GROUPMATCH(eMotion_Text, "광기")
			sTemp:1 = 광기
		ELSEIF GROUPMATCH(eMotion_Text, "최면", "공허", "붕괴")
			sTemp:1 = 공허
