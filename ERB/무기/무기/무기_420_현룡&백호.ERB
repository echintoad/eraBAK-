@무기_이름_420(iLen = 0)
#DIM DYNAMIC iLen
IF iLen > 0 && iLen < 11
	RESULTS = 현룡N백호
ELSE		 ;123456789012345678901234567890
	RESULTS = 현룡 N 백호
ENDIF
;------------------------------------------
;착용 효과 (대상, 착용 1,미착용 -1)
;------------------------------------------
@무기_착용_420(대상, 탈착 = 1)
#DIM 대상
#DIM 탈착
LOCAL:1	= 15
LOCAL:2 = 15



IF 탈착 == 1
	ABL:대상:무투 += LOCAL:1
	ABL:대상:방위 += LOCAL:2
	TALENT:대상:웨폰 = 420
	CALL SKILL_LEARN(대상, 스킬_장르_SP, 1420, 0)
	무기사용가능:420 = 0
ELSEIF 탈착 == -1
	ABL:대상:무투 -= LOCAL:1
	ABL:대상:방위 -= LOCAL:2
	;이부분은 없어도 됨 혹시몰라 넣어놓음
	TALENT:대상:웨폰 = 100
	CALL SKILL_FORGET_BY_NAME(대상, 스킬_장르_SP, "용호상박")
	무기사용가능:420 = 1
ENDIF

RETURN 탈착
