; CALL 총력전_UI_텍스트_추가(sTmp, 칼라_노랑)
; ; UI 업데이트
; CALL 총력전_UI_Main(0)
; WAITANYKEY
; 추가 텍스트
iTmp = 총력전_ID:시전자
IF iTmp >= 0 && NO:iTmp == 32
	SELECTCASE 대사번호
		CASE 0
			sTmp = 「…갑니다!」
		CASE 1
			sTmp = 「빛이여!」
		CASEELSE
			sTmp = 「밸런스 붕괴!!」
	ENDSELECT
	CALL 총력전_UI_텍스트_추가(sTmp)
	; UI 업데이트
	CALL 총력전_UI_Main(0)
	WAITANYKEY
ENDIF
; 대미지 증가
iTmp = 에너지 * GETVAR_RAIDSTAT_SUM(시전자, "공격력") * 250
대미지 += DIVIDE_ROUND(iTmp, 100)
FOR iTmp, 0, 총력전_캐릭터수
	SIF 목표:iTmp < 0
		BREAK
	CALL 총력전_처리_피격(대미지, 목표:iTmp, 시전자)
NEXT

