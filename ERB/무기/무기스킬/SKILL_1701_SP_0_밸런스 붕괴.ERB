IF iTmp >= 0 && NO:iTmp == 32
	; 아리스일 경우
	대사번호 = RAND:3
	SELECTCASE 대사번호
		CASE 0
			sTmp = 「마력 충전 100％…」
		CASE 1
			sTmp = 「에너지 과부하…」
		CASEELSE
			sTmp = 「이 빛에 의지를 담아, 꿰뚫어라!」
	ENDSELECT
	CALL 총력전_UI_텍스트_추가(sTmp)
ENDIF
; 목표 처리
CALL 총력전_목표_전체(목표, 1)
; 대미지
대미지 = GETVAR_RAIDSTAT_SUM(시전자, "공격력") * 432
