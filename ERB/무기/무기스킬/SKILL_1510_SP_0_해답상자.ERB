	; CALL 총력전_UI_텍스트_추가(sTmp, 칼라_노랑)
	; ; UI 업데이트
	; CALL 총력전_UI_Main(0)
	; WAITANYKEY
NEXT
; 이동
FOR iTmp, 0, 2
	sTmp = 이동회수 ({iTmp} / 2)
	CALL 총력전_UI_텍스트_추가(sTmp, 칼라_노랑) ; 칼라_파파랑?
	CALL 총력전_시퀀스_이동(0)
NEXT

