	CASEELSE ; 1, 2
		RESULTS = 적에게 방어력 60％ 감소후 공격력 300％ 대미지 
ENDSELECT

; @총력전_스킬_1121_발동(시전자)
; #DIM 시전자


; 총력전_공격력:LOCAL += 41
; 총력전_명중률:LOCAL += 18
; 총력전_회피율:LOCAL += 12
; 가변스킬관리:LOCAL = 1

; TRYCALLFORM 총력전_스킬_{TALENT:(총력전_파티_캐릭터:LOCAL):웨폰 + 1000}_ 설명
; CALL 총력전_전투_텍스트_추가(@"%RESULTS%")

; 총력전에서만 쓰는거라 이미지 변경은 일단 여기서...
; 스킬 이름 변경
@총력전_스킬_1121_발동(시전자)
#DIM 시전자

#DIM DYNAMIC 목표
#DIM DYNAMIC 대미지
#DIM CONST 공격증가 = 41
#DIM CONST 명중증가 = 18
#DIM CONST 회피증가 = 12
#DIM DYNAMIC iTmp, 2
#DIMS DYNAMIC sTmp, 3

IF 총력전_스킬_가변:시전자 == 0 ; 모드 변화
	; 발동 텍스트
	sTmp:0 = 「아비 에슈흐, 이행.」
	sTmp:1 = 「파워드 슈트, 기동.」
	sTmp:2 = 「장착 완료.」
	; CALL SKILL_1121_SP_0_NAME
	RESULTS = 아비 에슈흐: 기동
	CALL 총력전_스킬_공통_발동텍스트(시전자, 45, RESULTS, sTmp)
	; 이미지 변화
	IF 시전자 >= 0 && 총력전_ID:시전자 == 45
		; 나중에 아비 에슈흐 부상 화상 추가 
		; + 체력확인 후 화상 설정
		IF RAND:2 == 0
			; 총력전시 얼굴 화상만 쓰니까
			총력전_이미지:시전자 = 얼굴_전투_B1_45
		ELSE
			총력전_이미지:시전자 = 얼굴_전투_B2_45
		ENDIF
	ENDIF
	; 버프, 긍부정 2? 지금은 버프 제거 스킬에 제거 될수있음
	CALL 총력전_상태효과_추가(시전자, 시전자, 상효_종류_공격력백분율, 공격증가, 1, 총력전_방식_지속, 총력전_방식_지속, 1, 1121, 0)
	CALL 총력전_상태효과_추가(시전자, 시전자, 상효_종류_명중률백분율, 명중증가, 1, 총력전_방식_지속, 총력전_방식_지속, 1, 1121, 1)
	CALL 총력전_상태효과_추가(시전자, 시전자, 상효_종류_회피율백분율, 회피증가, 1, 총력전_방식_지속, 총력전_방식_지속, 1, 1121, 2)
	; 텍스트 추가
	sTmp = %조사처리(총력전_이름:시전자, "의")% 공격력 ({공격증가}％), 명중률 ({명중증가}％), 회피율 ({회피증가}％) 증가
	CALL 총력전_UI_텍스트_추가(sTmp, 칼라_노랑)
	; UI 업데이트
	CALL 총력전_UI_Main(0)
	WAITANYKEY
	; 가변 번호
	총력전_스킬_가변:시전자 = 1
ELSE ; 가변 1, 2, 3
	; 발동 텍스트
	sTmp:0 = 「목표 확인. 조준.」
	sTmp:1 = 「발사!」
	sTmp:2 = 「파이어!」
	; CALL SKILL_1121_SP_0_NAME
	RESULTS = 아비 에슈흐: 섬멸 모드
	CALL 총력전_스킬_공통_발동텍스트(시전자, 45, RESULTS, sTmp)
	; 목표 처리
	CALL 총력전_시퀀스_목표선택(목표, 총력전_선택_적군)
	; 목표 없으면 스킬 해재
	IF 목표 < 0
		CALL 총력전_스킬_공통_스킬취소(시전자)
		RETURN
	ENDIF
	; 적 디버프, 방어 60% 무시 비슷하게 하는거라 (방어_초기 만 하기는함...) 텍스트 필요 없음(?)
	; 나중에 방어력 무시 디버프 더하면 변경
	CALL 총력전_상태효과_추가(목표, 시전자, 상효_종류_방어력백분율, -60, 0, 총력전_방식_피격, 총력전_방식_피격, 1, 1121, 3)
	; CALL 총력전_상태효과_스탯처리(목표, 총력전_방식_스킬)
	; 대미지
	IF 총력전_스킬_가변:시전자 == 3
		대미지 = GETVAR_RAIDSTAT_SUM(시전자, "공격력") * 1152
	ELSE
		대미지 = GETVAR_RAIDSTAT_SUM(시전자, "공격력") * 300
	ENDIF
	대미지 = DIVIDE_ROUND(대미지, 100)
	CALL 총력전_처리_피격(대미지, 목표, 시전자)
	; 회피 하면 상태효과 소비 안함...
	; 방어 무시 추가하면 필요 없어짐
	IF RESULT == 0
		iTmp = 총력전_상태효과_검색_스킬번호(목표, 1121, 3)
		SIF iTmp >= 0
			CALL 총력전_상태효과_제거_텍스트(목표, iTmp)
	ENDIF
	; 이상한 pause... 처리_피격 waitanykey 무시? 제거 텍스트에 2번 기다림
	; 가변 처리
	IF 총력전_스킬_가변:시전자 == 3
		; 버프 제거
		FOR iTmp, 0, 3
			iTmp:1 = -1
			[IF_DEBUG]
			sTmp = searching 1121.{iTmp}
			CALL 총력전_UI_텍스트_추가(sTmp, 칼라_파노랑)
			[ENDIF]
			iTmp:1 = 총력전_상태효과_검색_스킬번호(시전자, 1121, iTmp)
			SIF iTmp:1 >= 0
				CALL 총력전_상태효과_제거_텍스트(시전자, iTmp:1)
		NEXT
		; 가변 번호
		총력전_스킬_가변:시전자 = 0
		; 이미지 변화
		총력전_이미지:시전자 = %총력전_이미지_초기:시전자%
	ELSE
		; 가변 번호
		총력전_스킬_가변:시전자 ++
	ENDIF
ENDIF

